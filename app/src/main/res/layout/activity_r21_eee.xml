<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".departments.reg21.eee.R21EeeActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Select semester"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            app:fontFamily="@font/lato_bold"
            app:textAllCaps="true" />

        <Button
            android:id="@+id/sem1"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato_bold"
            android:layout_height="55dp"
            android:text="semester 1" />

        <Button
            android:id="@+id/sem2"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato_bold"
            android:layout_height="55dp"
            android:text="semester 2" />

        <Button
            android:id="@+id/sem3"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato_bold"
            android:layout_height="55dp"
            android:text="semester 3" />

        <Button
            android:id="@+id/sem4"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato_bold"
            android:layout_height="55dp"
            android:text="semester 4" />

        <Button
            android:id="@+id/sem5"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato_bold"
            android:layout_height="55dp"
            android:text="semester 5" />

        <Button
            android:id="@+id/sem6"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato_bold"
            android:layout_height="55dp"
            android:text="semester 6" />

        <Button
            android:id="@+id/sem7"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato_bold"
            android:layout_height="55dp"
            android:text="semester 7" />

        <Button
            android:id="@+id/sem8"
            android:layout_width="match_parent"
            android:fontFamily="@font/lato_bold"
            android:layout_height="55dp"
            android:text="semester 8" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>